<div class="contents">
    <div class="login-form">
        <form method="post" action="/Top/Create">
            <h1 style="color:white;">Deborah Call</h1>

            <p class="warn_msg">@ViewBag.error</p>

            <input type="text" name="login" size="40" placeholder=" Login ID" class="login_form"><br><br>
            <input type="password" name="password" size="40" placeholder=" Password" class="login_form"><br><br>

            <input type="submit" value="SIGN IN" class="login_btn">
            @if(ViewBag.first == true)
            {
                <br>
                <br>
                <a asp-controller="Top" asp-action="FirstUser" class="first_user">初回ユーザ登録</a>

            }   
        </form>
    </div>
</div>