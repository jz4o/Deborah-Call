@model IQueryable<Sammarys.Models.SammaryStyle>
<div class="main_contents">
    <h5 class="page_title">サマリー</h5><br>
    <h5 class="title_line">@(DateTime.Today.ToString("yyyy年MM月dd日") + "のサマリー")</h5>
    <br>
    <div class="main" style="width:800px;margin:0 auto;">
        <p>問い合わせ件数； @(ViewBag.total.ToString().ToUpper()) 件</p>
        <p>
        @foreach (var v in Model)
        {
            @if (ViewBag.max == v.Id)
            {
                @(v.System.ToString() + "；" + v.Counts.ToString() + " 件")
            }
            else
            {
                @(v.System.ToString() + "；" + v.Counts.ToString() + " 件、")
            }
            
        }
            </p>
        <p>発注者； @(ViewBag.staff.ToString()) 件、受注者； @(ViewBag.juchusha.ToString()) 件</p>
    </div>
</div>